<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.ncl.j_carlton.comichub.Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/textViewRegister"
        android:layout_marginTop="26dp"
        android:textColor="#cc571d"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_marginTop="64dp"
        android:hint="Username"
        android:layout_below="@+id/textViewRegister"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/second_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/first_password"
        android:hint="Password"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_alignEnd="@+id/username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/second_password"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Enter password again" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/second_password"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_alignEnd="@+id/second_password"
        android:hint="Email" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_btn"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/textViewRegister"
        android:layout_marginStart="64dp"
        android:textColor="#ffffff"
        android:background="#cc571d"
        android:onClick="submitForm"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/reset_btn"
        android:layout_marginStart="47dp"
        android:textColor="#ffffff"
        android:background="#cc571d"
        android:layout_alignBottom="@+id/submit_btn"
        android:layout_alignParentStart="true"
        android:onClick="clearForm"/>

</RelativeLayout>
